[MASTER]
ignore=venv,migrations
load-plugins=pylint_django

[MESSAGES CONTROL]
disable=
    missing-docstring,
    no-member,
    invalid-str-returned,
    too-few-public-methods,
    too-many-ancestors,
    no-self-use,
    useless-super-delegation

[TYPECHECK]
# Ignora miembros generados din√°micamente como `objects`
generated-members=objects,DoesNotExist,MultipleObjectsReturned

[FORMAT]
max-line-length=100

[DESIGN]
max-args=5
max-attributes=10

[REPORTS]
output-format=colorized
reports=no

[PYLINT_DJANGO]
django-settings-module=app.settings
